<div class="center-block" style="width: 360px;">
  <div class = "card">
    <div class = "card_body">
      <h2>Log in</h2>
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
      <%= f.label :email %><br>
      <%= f.email_field :email %><br>
      <%= f.label :password %><br>
      <%= f.password_field :password %><br>
      <button class="btn"><%= "ログイン" %></button>
      <% end %>
    </div>
  </div>
</div>
